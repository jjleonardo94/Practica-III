@page 
@model Practica_III.Pages.PrestamosModel
@{
}

<div class="row margin-bottom-40">
<h1>Calcular cuotas mensuales de un prestamo</h1>
<br /><br /><br />
        <form id="frm_calcular_cuotas">
            <div class="col-md-12">
                <div class="row"> 
                        <div class="form-group">
                            <label for="data-monto">
                                Valor del préstamo
                            </label>
                            <div class="input-group">
                                <input class="form-control" type="text" placeholder="ingrese el valor" id="data-prestamos" name="data_prestamos">&nbsp;&nbsp;&nbsp;&nbsp;
                            </div>
                            <span class="help-block"></span>
                    </div>
                        <div class="form-group">
                            <label for="data-tasa">
                                Tasa Pactada
                            </label>
                            <div class="input-group">                          
                                <input class="form-control" type="text" placeholder="% de la tasa" id="data-tasa" name="data_tasa" maxlength="5">&nbsp;&nbsp;&nbsp;&nbsp;
                            </div>
                            <span class="help-block"></span>
                        </div>
                        <div class="form-group">
                            <label for="data-cuotas">
                                Cantidad de cuotas
                            </label>
                            <input class="form-control" type="text" placeholder="cantidad cuota" id="data-cuotas" maxlength="3" name="data_cuotas">
                            <span class="help-block"></span>
                        </div>
                    </div>
                <div class="row aligncenter margin-top-30">
                    <button type="submit" class="btn btn-primary" value="btn_Cuotas" autocomplete="off" name="Prestamo">Calcular Cuotas</button>
                </div>
                         
            </div>
            <hr />
            <div class="form-group">
                            <label for="data-cuotas">
                                Cuotas Mensuales
                            </label>
                            <input class="form-control" id="data-cuotas" placeholder="@Model.Prestamo">
                            <span class="help-block"></span>
                    </div>
            <hr />
        </form>
        
    </div>